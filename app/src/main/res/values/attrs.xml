<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--温度计-->
    <declare-styleable name="TemperatureView">
        <attr name="backgroundColor" format="color" />
        <attr name="thermometerColor" format="color" />
        <attr name="valueColor" format="color" />
        <attr name="valueSize" format="dimension" />
    </declare-styleable>
    <!--雷达-->
    <declare-styleable name="RadarView">
        <attr name="radarCicleColor" format="color"/><!--圆圈和交叉线的颜色-->
        <attr name="radarCircleNum" format="integer"/><!--圆圈数量-->
        <attr name="radarSweepColor" format="color"/><!--扫描的颜色-->
        <attr name="radarRainDropColor" format="color"/><!--水滴的颜色-->
        <attr name="radarRainDropNum" format="integer"/><!--水滴的数量-->
        <attr name="radarShowCross" format="boolean"/><!--是否显示交叉线-->
        <attr name="radarShowRainDrop" format="boolean"/><!--是否显示水滴-->
        <attr name="radarSpeed" format="float"/><!--扫描的转速，表示几秒转一圈-->
        <attr name="radarFlicker" format="float"/><!--水滴显示和消失的速度-->
    </declare-styleable>
    <!--自定义时钟-->
    <declare-styleable name="CustomClockView">
        <attr name="ccv_hour_pointer_color" format="color"/><!--时针颜色-->
        <attr name="ccv_minute_pointer_color" format="color"/><!--分针颜色-->
        <attr name="ccv_second_pointer_color" format="color"/><!--秒针颜色-->
        <attr name="ccv_hour_pointer_width" format="dimension"/><!--时针宽度-->
        <attr name="ccv_minute_pointer_width" format="dimension"/><!--分针宽度-->
        <attr name="ccv_second_pointer_width" format="dimension"/><!--秒针宽度-->
        <attr name="ccv_text_size" format="dimension"/><!--表盘文字大小-->
        <attr name="ccv_padding" format="dimension"/><!--表盘内边距-->
        <attr name="ccv_pointer_cornor_radius" format="dimension"/><!--指针圆角值-->
        <attr name="ccv_pointer_end_length" format="dimension"/><!--指针超过中心点的长度,就是针长度超出的那一截-->
        <attr name="ccv_scale_long_color" format="color"/><!--时刻刻度颜色-->
        <attr name="ccv_scale_short_color" format="color"/><!--非时刻刻度颜色-->
    </declare-styleable>
    <!--仿ios滑动解锁-->
    <declare-styleable name="SlideButton">
        <attr name="slide_button_bg" format="color"/><!--背景颜色-->
        <attr name="slide_button_circle_color" format="color"/><!--滑动圆圈的颜色-->
        <attr name="slide_buuton_text_content" format="string"/><!--中间要显示的文字-->
        <attr name="slide_button_text_color" format="color"/><!--文字的颜色-->
        <attr name="slide_button_text_size" format="dimension"/><!--文字的大小-->
    </declare-styleable>
    <!--数字雨-->
    <declare-styleable name="NumberRainItem">
        <attr name="normalColor" format="color"/><!--默认颜色-->
        <attr name="highColor" format="color"/><!--高亮颜色-->
        <attr name="textSize" format="dimension"/><!--文字大小-->
    </declare-styleable>
    <!--数字雨-->
    <declare-styleable name="NumberRainView">
        <attr name="rainTextSize" format="dimension"/>
        <attr name="rainHighLightColor" format="color"/>
        <attr name="rainNormalColor" format="color"/>
    </declare-styleable>
    <!--直尺-->
    <declare-styleable name="RulerView">
        <attr name="unit" format="enum">
            <enum name="inch" value="0"/>
            <enum name="cm" value="1"/>
        </attr>

        <attr name="guideScaleTextSize" format="dimension" />
        <attr name="graduatedScaleWidth" format="dimension" />
        <attr name="graduatedScaleBaseLength" format="dimension" />
        <attr name="scaleColor" format="color" />

        <attr name="pointerRadius" format="dimension" />
        <attr name="pointerStrokeWidth" format="dimension" />
        <attr name="pointerColor" format="color" />

        <attr name="labelTextSize" format="dimension" />
        <attr name="defaultLabelText" format="string" />
        <attr name="labelColor" format="color" />

        <attr name="rulerbackgroundColor" format="color" />
    </declare-styleable>
    <!--歌词同步-->
    <declare-styleable name="LrcView">
        <attr name="lrcColr" format="color|reference"/>
        <attr name="lrcLineColor" format="color|reference"/>
        <attr name="lrcMode" format="enum">
            <enum name="NONE" value="0"/>
            <enum name="KARAOKE" value="1"/>
        </attr>
    </declare-styleable>
    <!--电影选座-->
    <declare-styleable name="MovieSeatView">
        <attr name="seat_checked" format="reference"/><!--已选图片-->
        <attr name="seat_sold" format="reference"/><!--已售图片-->
        <attr name="seat_available" format="reference"/><!--可选图片-->
        <attr name="overview_checked" format="color"/><!--已选区域颜色-->
        <attr name="overview_sold" format="color"/><!--已售区域颜色-->
        <attr name="txt_color" format="color"/>
    </declare-styleable>
    <!--购物车选数量的控件-->
    <declare-styleable name="AmountView">
        <attr name="amountBtnWidth" format="dimension"/><!--左右两边按钮的长度-->
        <attr name="amountBtnTextSize" format="dimension"/><!--左右两边按钮的字体大小-->
        <attr name="amountTvWidth" format="dimension"/><!--中间编辑框的长度-->
        <attr name="amountTvTextSize" format="dimension"/><!--中间编辑框的字体大小-->
        <attr name="amountTvTextColor" format="color"/><!--中间编辑框文字的颜色-->
    </declare-styleable>
    <!--横向滑动选择的控件-->
    <declare-styleable name="HorizontalSelectedView">
        <attr name="seeSize" format="integer"/><!--可见数目-->
        <attr name="selectedTextSize" format="float"/><!--已选文字大小-->
        <attr name="selectedTextColor" format="color"/><!--已选文字颜色-->
        <attr name="noSelectedTextSize" format="float"/><!--未选中的文字大小-->
        <attr name="noSelectedTextColor" format="color"/><!--未选中的文字颜色-->
    </declare-styleable>
    <!--曲线图-->
    <declare-styleable name="SuitLines">
        <attr name="xySize" format="float" />
        <attr name="xyColor" format="reference|color" />
        <attr name="lineType">
            <enum name="curve" value="0" />
            <enum name="segment" value="1" />
        </attr>
        <attr name="lineStyle">
            <enum name="solid" value="0" />
            <enum name="dashed" value="1" />
        </attr>
        <attr name="needEdgeEffect" format="boolean" />
        <attr name="colorEdgeEffect" format="reference|color" />
        <attr name="needClickHint" format="boolean" />
        <attr name="colorHint" format="reference|color" />
        <attr name="maxOfVisible" format="integer" />
        <attr name="countOfY" format="integer" />
    </declare-styleable>
    <!--中国象棋-->
    <declare-styleable name="PieceView">
        <attr name="type" format="integer" />
    </declare-styleable>
    <!--印章-->
    <declare-styleable name="SealView">
        <attr name="seal_textSize" format="float"/><!--文字大小-->
        <attr name="seal_textColor" format="color"/><!--文字颜色-->
        <attr name="seal_ringHeight" format="integer"/><!--圆圈宽度-->
    </declare-styleable>
    <!--提示小红点-->
    <declare-styleable name="BadgeButton">
        <attr name="btnBadgeText" format="string"/><!--展示的文字-->
        <attr name="btnBadgeColor" format="color"/><!--展示的颜色-->
        <attr name="btnBadgeHeight" format="dimension"/><!--高度-->
        <attr name="btnBadgeVisible" format="boolean"/><!--是否可见-->
    </declare-styleable>
    <!--数字测速仪-->
    <declare-styleable name="DigitSpeedView">
        <attr name="speedTextColor" format="color"/>
        <attr name="unitTextColor" format="color" />
        <attr name="speedBackgroundColor" format="color" />
        <attr name="speedTextSize" format="dimension" />
        <attr name="unitTextSize" format="dimension" />
        <attr name="speedUnit" format="string" />
        <attr name="speed" format="integer" />
        <attr name="backgroundDrawable" format="integer" />
        <attr name="disableBackgroundImage" format="boolean" />
        <attr name="showUnit" format="boolean" />
    </declare-styleable>
</resources>