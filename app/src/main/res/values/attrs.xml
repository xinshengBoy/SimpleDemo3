<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--温度计-->
    <declare-styleable name="TemperatureView">
        <attr name="backgroundColor" format="color" />
        <attr name="thermometerColor" format="color" />
        <attr name="valueColor" format="color" />
        <attr name="valueSize" format="dimension" />
    </declare-styleable>
    <!--雷达-->
    <declare-styleable name="RadarView">
        <attr name="radarCicleColor" format="color"/><!--圆圈和交叉线的颜色-->
        <attr name="radarCircleNum" format="integer"/><!--圆圈数量-->
        <attr name="radarSweepColor" format="color"/><!--扫描的颜色-->
        <attr name="radarRainDropColor" format="color"/><!--水滴的颜色-->
        <attr name="radarRainDropNum" format="integer"/><!--水滴的数量-->
        <attr name="radarShowCross" format="boolean"/><!--是否显示交叉线-->
        <attr name="radarShowRainDrop" format="boolean"/><!--是否显示水滴-->
        <attr name="radarSpeed" format="float"/><!--扫描的转速，表示几秒转一圈-->
        <attr name="radarFlicker" format="float"/><!--水滴显示和消失的速度-->
    </declare-styleable>
    <!--自定义时钟-->
    <declare-styleable name="CustomClockView">
        <attr name="ccv_hour_pointer_color" format="color"/><!--时针颜色-->
        <attr name="ccv_minute_pointer_color" format="color"/><!--分针颜色-->
        <attr name="ccv_second_pointer_color" format="color"/><!--秒针颜色-->
        <attr name="ccv_hour_pointer_width" format="dimension"/><!--时针宽度-->
        <attr name="ccv_minute_pointer_width" format="dimension"/><!--分针宽度-->
        <attr name="ccv_second_pointer_width" format="dimension"/><!--秒针宽度-->
        <attr name="ccv_text_size" format="dimension"/><!--表盘文字大小-->
        <attr name="ccv_padding" format="dimension"/><!--表盘内边距-->
        <attr name="ccv_pointer_cornor_radius" format="dimension"/><!--指针圆角值-->
        <attr name="ccv_pointer_end_length" format="dimension"/><!--指针超过中心点的长度,就是针长度超出的那一截-->
        <attr name="ccv_scale_long_color" format="color"/><!--时刻刻度颜色-->
        <attr name="ccv_scale_short_color" format="color"/><!--非时刻刻度颜色-->
    </declare-styleable>
    <!--仿ios滑动解锁-->
    <declare-styleable name="SlideButton">
        <attr name="slide_button_bg" format="color"/><!--背景颜色-->
        <attr name="slide_button_circle_color" format="color"/><!--滑动圆圈的颜色-->
        <attr name="slide_buuton_text_content" format="string"/><!--中间要显示的文字-->
        <attr name="slide_button_text_color" format="color"/><!--文字的颜色-->
        <attr name="slide_button_text_size" format="dimension"/><!--文字的大小-->
    </declare-styleable>
</resources>