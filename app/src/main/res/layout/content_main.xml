<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yks.simpledemo3.activity.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorGray3">
        <com.youth.banner.Banner
            android:id="@+id/banner_main"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:indicator_width="8dp"
            app:indicator_height="8dp"/>
        <TextView
            style="@style/lableText"
            android:text="@string/sort"/>
        <LinearLayout
            style="@style/menuLayout">
            <!--频道排序1-->
            <TextView
                android:id="@+id/channel_sort_layout"
                style="@style/menuIcon"/>
            <!--drawable的应用-->
            <TextView
                android:id="@+id/drawable_layout"
                style="@style/menuIcon"/>
            <!--AppBarLayout悬浮吸顶-->
            <TextView
                android:id="@+id/appBarLayout_layout"
                style="@style/menuIcon"/>
            <!--自定义安全键盘-->
            <TextView
                android:id="@+id/safeKeyBoard_layout"
                style="@style/menuIcon"/>
        </LinearLayout>
        <TextView
            style="@style/lableText"
            android:text="@string/verification"/>
        <LinearLayout
            style="@style/menuLayout">
            <!--短信验证-->
            <TextView
                android:id="@+id/message_verification_layout"
                style="@style/menuIcon"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>