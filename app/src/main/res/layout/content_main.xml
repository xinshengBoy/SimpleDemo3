<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:imageText="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.yks.simpledemo3.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray3"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/banner_main"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:image_scale_type="fit_xy"
            app:indicator_height="8dp"
            app:indicator_width="8dp" />

        <TextView
            style="@style/lableText"
            android:text="@string/sort" />

        <LinearLayout style="@style/menuLayout">
            <!--频道排序1-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/channel_sort_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@mipmap/channel_sort"
                imageText:myTextContent="@string/channel_sort" />
            <!--drawable的应用-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/drawable_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@mipmap/drawable_layout"
                imageText:myTextContent="@string/drawable_layout" />
            <!--AppBarLayout悬浮吸顶-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/appBarLayout_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@mipmap/ai_top"
                imageText:myTextContent="@string/ai_top" />
            <!--自定义安全键盘-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/safeKeyBoard_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@mipmap/safe_keyboard"
                imageText:myTextContent="@string/safe_keyboard" />
        </LinearLayout>

        <TextView
            style="@style/lableText"
            android:text="@string/verification" />

        <LinearLayout style="@style/menuLayout">
            <!--短信验证-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/message_verification_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@mipmap/message_verification"
                imageText:myTextContent="@string/message_verification" />
            <!--仿小米计时器-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/xiaomi_stepclock_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_clock"
                imageText:myTextContent="@string/ic_clock" />
            <!--dialog_fragment对话框-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/dialog_fragment_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/dialog_fragment"
                imageText:myTextContent="@string/dialog_fragment" />
            <!--自定义风车-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/windwill_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_windwill"
                imageText:myTextContent="@string/ic_windwill" />
        </LinearLayout>

        <LinearLayout style="@style/menuLayout">
            <!--超级按钮-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/super_button_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_super_button"
                imageText:myTextContent="@string/ic_super_button" />
            <!--水印图片-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/water_picture_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_water_picture"
                imageText:myTextContent="@string/ic_water_picture" />
            <!--定时任务-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/timing_tasks_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_timing_tasks"
                imageText:myTextContent="@string/ic_timing_tasks" />
            <!--csv文件导出-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/export_csv_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_csv_table"
                imageText:myTextContent="@string/ic_csv_table" />
        </LinearLayout>

        <TextView
            style="@style/lableText"
            android:text="@string/custom" />

        <LinearLayout style="@style/menuLayout">
            <!--自定义温度计-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/temperature_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_temperature"
                imageText:myTextContent="@string/ic_temperature" />
            <!--自定义转盘菜单-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/circle_menu_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_circle_menu"
                imageText:myTextContent="@string/ic_circle_menu" />
            <!--雷达扫描-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/radar_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_radar"
                imageText:myTextContent="@string/ic_radar" />
            <!--跑马灯-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/marquee_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_marquee"
                imageText:myTextContent="@string/ic_marquee" />
        </LinearLayout>

        <LinearLayout style="@style/menuLayout">
            <!--自定义时钟-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/custom_clock_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_custom_clock"
                imageText:myTextContent="@string/ic_custom_clock" />
            <!--滑动解锁-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/scroll_unlock_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_scroll_unlock"
                imageText:myTextContent="@string/ic_scroll_unlock" />
            <!--XPop-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/xpop_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_xpop"
                imageText:myTextContent="@string/ic_xpop" />
            <!--滑动验证-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/scroll_check_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_scroll_check"
                imageText:myTextContent="@string/ic_scroll_check" />
        </LinearLayout>

        <TextView
            style="@style/lableText"
            android:text="@string/search" />

        <LinearLayout style="@style/menuLayout">
            <!--即时搜索-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/search_intime_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_search_intime"
                imageText:myTextContent="@string/ic_search_intime" />
            <!--数字雨-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/number_rain_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_number_rain"
                imageText:myTextContent="@string/ic_number_rain" />
            <!--数字雨-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/run_number_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_run_number"
                imageText:myTextContent="@string/ic_run_number" />
            <!--数字雨-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/bottom_sheet_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_bottom_sheet"
                imageText:myTextContent="@string/ic_bottom_sheet" />
        </LinearLayout>

        <LinearLayout style="@style/menuLayout">
            <!--罗盘时钟-->
            <com.yks.simpledemo3.view.MenuItemView
                android:id="@+id/compass_clock_layout"
                style="@style/menuItemStyle"
                imageText:myImageResource="@drawable/ic_compass_clock"
                imageText:myTextContent="@string/ic_compass_clock" />
            <!--&lt;!&ndash;数字雨&ndash;&gt;-->
            <!--<com.yks.simpledemo3.view.MenuItemView-->
            <!--android:id="@+id/number_rain_layout"-->
            <!--style="@style/menuItemStyle"-->
            <!--imageText:myImageResource="@drawable/ic_number_rain"-->
            <!--imageText:myTextContent="@string/ic_number_rain"/>-->
            <!--&lt;!&ndash;数字雨&ndash;&gt;-->
            <!--<com.yks.simpledemo3.view.MenuItemView-->
            <!--android:id="@+id/run_number_layout"-->
            <!--style="@style/menuItemStyle"-->
            <!--imageText:myImageResource="@drawable/ic_run_number"-->
            <!--imageText:myTextContent="@string/ic_run_number"/>-->
            <!--&lt;!&ndash;数字雨&ndash;&gt;-->
            <!--<com.yks.simpledemo3.view.MenuItemView-->
            <!--android:id="@+id/bottom_sheet_layout"-->
            <!--style="@style/menuItemStyle"-->
            <!--imageText:myImageResource="@drawable/ic_bottom_sheet"-->
            <!--imageText:myTextContent="@string/ic_bottom_sheet"/>-->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>