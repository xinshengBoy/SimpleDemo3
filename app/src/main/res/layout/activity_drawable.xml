<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/colorGray3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/headerLayout"
            layout="@layout/layout_header"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="单一边线效果"
            android:background="@drawable/drawable_test1"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="双边线效果"
            android:background="@drawable/drawable_test2"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="阴影效果"
            android:background="@drawable/drawable_test3"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/drawable_test4"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="图片叠层（带缩放）"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/colorWhite"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/drawable_test5"
            android:scaleType="fitCenter"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="图片叠层（移位）"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/colorWhite"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:src="@drawable/drawable_test6"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="图片叠层旋转"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/colorWhite"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="点击"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/drawable_test7"/>
    </LinearLayout>
</ScrollView>