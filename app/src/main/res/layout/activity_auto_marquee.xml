<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yks.simpledemo3.view.AutoMarqueeView
        android:id="@+id/view_auto_marquee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:textSize="50sp"
        android:textColor="@color/colorWhite"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="妹妹你大胆的往前走呀，往前走，莫回呀头"/>
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="字体大小"
                android:textSize="14sp"
                android:textColor="@color/colorGray"
                android:layout_gravity="center_vertical"/>
            <SeekBar
                android:id="@+id/sb_textsize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_gravity="center_vertical"
                android:min="20"
                android:max="100"
                android:progress="50"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/colorWhite">
            <EditText
                android:id="@+id/et_auto_marquee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入文字"
                android:textSize="14sp"
                android:textColorHint="@color/colorGray2"
                android:padding="5dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/txt_auto_marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textSize="14sp"
                android:textColor="@color/colorBlue3"
                android:background="@color/pickerview_timebtn_pre"
                android:padding="10dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>