<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:jky="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@+id/headerLayout"
        layout="@layout/layout_header"/>
    <com.jiakaiyang.library.easyform.view.EFFormView
        android:id="@+id/view_efform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        jky:frameWidth="1dp"
        jky:frameColor="@color/colorGreen"
        jky:dividerWidth="1dp"
        jky:dividerColor="@color/colorBlue3"
        jky:formItemTextColor="@color/colorBlack2"
        jky:itemGravity="center"
        jky:columnCount="2"
        jky:formTitleNames="姓名,描述"/>

</LinearLayout>