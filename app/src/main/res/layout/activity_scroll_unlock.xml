<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorGray3">
    <include
        android:id="@+id/headerLayout"
        layout="@layout/layout_header"/>
    <com.yks.simpledemo3.view.SlideRightViewDragHelper
        android:id="@+id/get_order_drag_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <LinearLayout
            android:id="@+id/get_order_ll_slide"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/seekbar_bg"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_slide_right"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="滑动解锁"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/get_order_tv_left_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="确认"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </com.yks.simpledemo3.view.SlideRightViewDragHelper>
    <com.yks.simpledemo3.view.SlideButton
        android:id="@+id/view_slidebutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/seekbar_bg"
        android:layout_margin="5dp"
        app:slide_button_bg="@color/colorBlack"
        app:slide_button_circle_color="@color/colorWhite"
        app:slide_buuton_text_content="滑动验证"
        app:slide_button_text_color="@color/colorWhite"
        app:slide_button_text_size="20sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/seekbar_bg"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/txt_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="滑动解锁"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <SeekBar
            android:id="@+id/sb_unlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:progress="0"
            android:max="100"
            android:maxHeight="10dp"
            android:minHeight="10dp"
            android:thumb="@mipmap/keyboard_right"
            android:progressDrawable="@color/colorTranslate"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="print"
        android:textColor="@color/colorWhite"
        android:onClick="zipFile"
        android:background="@drawable/btn_login_bg"
        android:layout_margin="5dp"/>
    <com.yks.simpledemo3.view.StockView
        android:layout_width="match_parent"
        android:layout_height="150dp" />
</LinearLayout>