<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/other_chat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <ImageView
            android:id="@+id/iv_you_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nvhai"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_you_chatcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat1_bg"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorBlack2"
            android:textStyle="italic"
            android:text="正如源码中，注释的一样，正ed如源码中，注释的一样，正如源码中，注释的一样，正如源码中，注释的一样，"
            android:clickable="true"
            android:layout_toEndOf="@+id/iv_you_head"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_chat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_my_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nanhai"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_my_chatcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat2_bg"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorBlack2"
            android:textStyle="italic"
            android:text="正如源码中，注释的一"
            android:clickable="true"
            android:layout_toStartOf="@+id/iv_my_head"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>