<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/digit_speed_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:scaleType="center"
    android:background="@drawable/digit_speed_bg">

    <TextView
        android:id="@+id/digit_speed_bg"
        android:text="888"
        android:includeFontPadding="false"
        android:textColor="@color/light_grey_trasparent"
        android:textSize="120sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/digit_speed"
        android:text="0"
        android:includeFontPadding="false"
        android:layout_alignRight="@+id/digit_speed_bg"
        android:layout_alignEnd="@+id/digit_speed_bg"
        android:shadowColor="@color/green"
        android:textColor="@color/green"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:gravity="center"
        android:textSize="120sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/digit_speed_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/green"
        android:textColor="@color/green"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:textSize="20sp"
        android:text="km/h"
        android:includeFontPadding="false"
        android:layout_alignBottom="@+id/digit_speed_bg"
        android:layout_toRightOf="@+id/digit_speed_bg"
        android:layout_toEndOf="@+id/digit_speed_bg"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        />

</RelativeLayout>