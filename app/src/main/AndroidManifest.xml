            android:screenOrientation="portrait"/>
        <activity android:name=".activity.CityLocationActivity"
            android:label="@string/ic_city_location"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.BluetoothActivity"
            android:label="@string/ic_bluetooth"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.BluetoothReceivedFileListActivity"
            android:label="已接收文件列表"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.MusicLrcActivity"
            android:label="@string/ic_music_lrc"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.MovieSeatActivity"
            android:label="@string/ic_movie_seat"
            android:screenOrientation="portrait"/>
    </application>

</manifest>